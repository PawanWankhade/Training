<Window x:Class="WPFDesktopUIControls.TreeViewExample"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TreeView" Height="300" Width="300">
    
    <StackPanel>
        <TreeView>
            <TreeViewItem Header="Root">
                <TreeViewItem Header="Parent1">
                    <TreeViewItem Header="Child1" />
                    <TreeViewItem Header="Child2" />
                </TreeViewItem>
                <TreeViewItem Header="Parent2">
                    <TreeViewItem Header="Child1" />
                    <TreeViewItem Header="Child2" />
                </TreeViewItem>
                <TreeViewItem Header="Parent3">
                    <TreeViewItem Header="Child1" />
                    <TreeViewItem Header="Child2" />
                </TreeViewItem>
            </TreeViewItem>
        </TreeView>
    </StackPanel>
    
</Window>
