<Window x:Class="DockPanelLayout.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DockPanel Layout" Height="500" Width="500">
    <DockPanel>
        <Button Height="100" Background="Red" DockPanel.Dock="Top" />
        <Button Height="100" Background="Yellow" DockPanel.Dock="Bottom" />
        <Button Width="100"  Background="Blue" DockPanel.Dock="Left" />
        <Button Width="100"  Background="Green" DockPanel.Dock="Right" />
        <Button Background="Black"/>
    </DockPanel>
</Window>
